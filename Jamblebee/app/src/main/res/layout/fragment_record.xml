<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loadVideo"
            android:text="@string/upload"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="300dp">
            <FrameLayout
                android:id="@+id/video_frame"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:background="#000"
                >

                <VideoView
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"
                    android:id="@+id/video"
                    android:layout_centerHorizontal="true" />




            </FrameLayout>
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:padding="5px"
                android:layout_margin="10px">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"


                    >
                    <TextureView
                        android:id="@+id/surface_view"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"

                        />
                    <ImageButton
                        android:id="@+id/button_capture"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:onClick="onCaptureClick"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:background="@drawable/record_button"
                        />
                    <ImageButton
                        android:id="@+id/save_video"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="end|top"
                        android:onClick="onSaveVideoClick"
                        android:background="@drawable/ic_action_content_archive"
                        />
                    <ImageButton
                        android:id="@+id/stop_recording"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="start|top"
                        android:onClick="onPauseRecordClick"
                        android:background="@drawable/pause"
                        />

                </FrameLayout>
            </FrameLayout>

        </RelativeLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight=".60">

            <GridView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="10dp"
                android:id="@+id/gridView"
                android:numColumns="auto_fit"
                android:layout_gravity="center" />
        </FrameLayout>

    </LinearLayout>

</RelativeLayout>
